generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ========================================
// ORGANIZATION & USER MANAGEMENT
// ========================================

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Format preferences
  dateFormat     String @default("dd/MM/yyyy") // Options: "dd/MM/yyyy", "MM/dd/yyyy", "yyyy-MM-dd"
  currency       String @default("USD") // ISO currency code
  currencySymbol String @default("$")

  users                 User[]
  properties            Property[]
  tenants               Tenant[]
  leaseAgreements       LeaseAgreement[]
  notificationTemplates NotificationTemplate[]
  notificationRules     NotificationRule[]
  notificationLogs      NotificationLog[]
  activities            Activity[]
  roles                 Role[]
  subscription          Subscription?
  apiKeys               ApiKey[]
  maintenanceRequests   MaintenanceRequest[]
  documents             Document[]
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String
  emailVerified  DateTime?
  image          String?
  hashedPassword String?

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  userRoles         UserRole[]
  activities        Activity[]
  notificationRules NotificationRule[]

  @@index([organizationId])
  @@index([email])
}

// ========================================
// ROLE-BASED ACCESS CONTROL (RBAC)
// ========================================

model Role {
  id             String       @id @default(cuid())
  name           String
  isSystem       Boolean      @default(false)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userRoles         UserRole[]
  roleAccesses      RoleAccess[]
  notificationRules NotificationRule[]

  @@unique([organizationId, name])
  @@index([organizationId])
}

model UserRole {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  roleId String
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

model Access {
  id       String @id @default(cuid())
  resource String
  action   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roleAccesses RoleAccess[]

  @@unique([resource, action])
  @@index([resource])
}

model RoleAccess {
  id       String @id @default(cuid())
  roleId   String
  role     Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
  accessId String
  access   Access @relation(fields: [accessId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([roleId, accessId])
  @@index([roleId])
  @@index([accessId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========================================
// PROPERTY & UNIT MANAGEMENT
// ========================================

model Property {
  id   String @id @default(cuid())
  name String

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  units               Unit[]
  activities          Activity[]
  maintenanceRequests MaintenanceRequest[]
  documents           Document[]

  @@index([organizationId])
}

model Unit {
  id            String  @id @default(cuid())
  name          String
  isUnavailable Boolean @default(false)

  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  dailyRate   Decimal? @db.Decimal(12, 2)
  monthlyRate Decimal? @db.Decimal(12, 2)
  annualRate  Decimal? @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leaseAgreements     LeaseAgreement[]
  activities          Activity[]
  maintenanceRequests MaintenanceRequest[]
  documents           Document[]

  @@index([propertyId])
  @@index([isUnavailable])
}

// ========================================
// TENANT & CONTACT MANAGEMENT
// ========================================

enum TenantStatus {
  LEAD
  BOOKED
  ACTIVE
  EXPIRED
}

model Tenant {
  id String @id @default(cuid())

  fullName String
  email    String
  phone    String

  status TenantStatus @default(LEAD)

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  preferEmail    Boolean @default(true)
  preferWhatsapp Boolean @default(false)
  preferTelegram Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leaseAgreements     LeaseAgreement[]
  activities          Activity[]
  maintenanceRequests MaintenanceRequest[]
  documents           Document[]

  @@unique([email, organizationId])
  @@index([organizationId])
  @@index([status])
  @@index([email])
}

// ========================================
// LEASE & CONTRACT MANAGEMENT
// ========================================

enum LeaseStatus {
  DRAFT
  ACTIVE
  ENDED
  CANCELLED
}

enum PaymentCycle {
  DAILY
  MONTHLY
  ANNUAL
}

model LeaseAgreement {
  id String @id @default(cuid())

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id], onDelete: Cascade)

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  startDate             DateTime
  endDate               DateTime
  paymentCycle          PaymentCycle @default(MONTHLY)
  rentAmount            Decimal      @db.Decimal(12, 2)
  isAutoRenew           Boolean      @default(false)
  gracePeriodDays       Int?
  autoRenewalNoticeDays Int?
  paidAt                DateTime?

  status LeaseStatus @default(DRAFT)

  paymentDate      DateTime?
  paymentMethod    PaymentMethod?
  paymentStatus    PaymentStatus  @default(PENDING)
  externalId       String?
  externalResponse Json?
  paymentNotes     String?        @db.Text

  depositAmount Decimal?       @db.Decimal(12, 2)
  depositStatus DepositStatus? @default(HELD)

  renewedFromId String?
  renewedFrom   LeaseAgreement? @relation("LeaseRenewal", fields: [renewedFromId], references: [id], onDelete: SetNull)
  renewedTo     LeaseAgreement? @relation("LeaseRenewal")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities          Activity[]
  maintenanceRequests MaintenanceRequest[]
  documents           Document[]

  @@unique([renewedFromId])
  @@index([tenantId])
  @@index([unitId])
  @@index([organizationId])
  @@index([status])
  @@index([startDate])
  @@index([endDate])
  @@index([organizationId, status, startDate]) // Composite for filtered lease queries
  @@index([unitId, status, startDate, endDate]) // Composite for overlap validation
}

// ========================================
// PAYMENT MANAGEMENT
// ========================================

enum DepositStatus {
  HELD
  RETURNED
  FORFEITED
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  VIRTUAL_ACCOUNT
  QRIS

  MANUAL
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

// ========================================
// NOTIFICATION SYSTEM
// ========================================

enum NotificationChannel {
  EMAIL
  WHATSAPP
  TELEGRAM
}

enum NotificationTrigger {
  PAYMENT_REMINDER
  PAYMENT_LATE
  PAYMENT_CONFIRMED
  LEASE_EXPIRING
  LEASE_EXPIRED
  MANUAL
}

enum NotificationRecipient {
  TENANT
  USER
  ROLE
}

model NotificationTemplate {
  id String @id @default(cuid())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  name    String
  trigger NotificationTrigger
  channel NotificationChannel

  subject String? // For email
  body    String  @db.Text

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
  @@index([trigger])
  @@index([channel])
}

model NotificationRule {
  id String @id @default(cuid())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  name    String
  trigger NotificationTrigger

  daysOffset Int

  channels NotificationChannel[]

  recipientType   NotificationRecipient @default(TENANT)
  recipientUserId String?
  recipientUser   User?                 @relation(fields: [recipientUserId], references: [id], onDelete: SetNull)
  recipientRoleId String?
  recipientRole   Role?                 @relation(fields: [recipientRoleId], references: [id], onDelete: SetNull)

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
  @@index([trigger])
  @@index([recipientUserId])
  @@index([recipientRoleId])
}

enum NotificationStatus {
  PENDING
  SENT
  FAILED
}

model NotificationLog {
  id String @id @default(cuid())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  recipientEmail String?
  recipientPhone String?

  trigger NotificationTrigger
  channel NotificationChannel

  subject String?
  body    String  @db.Text

  status       NotificationStatus @default(PENDING)
  sentAt       DateTime?
  failedReason String?            @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
  @@index([status])
  @@index([createdAt])
  @@index([organizationId, status, createdAt]) // Composite for filtered pagination
}

// ========================================
// API KEY MANAGEMENT
// ========================================

enum ApiKeyService {
  RESEND_EMAIL
  WHATSAPP_META
  TELEGRAM_BOT
}

model ApiKey {
  id String @id @default(cuid())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  name    String
  service ApiKeyService

  // Encrypted storage
  encryptedValue String @db.Text
  encryptionIv   String
  encryptionTag  String

  // Display & metadata
  lastFourChars String
  isActive      Boolean @default(true)

  // Audit fields
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  lastUsedAt DateTime?

  @@unique([organizationId, service])
  @@index([organizationId])
  @@index([service])
}

// ========================================
// ACTIVITY & AUDIT LOG
// ========================================

enum ActivityType {
  TENANT_CREATED
  TENANT_UPDATED
  TENANT_STATUS_CHANGED
  LEASE_CREATED
  LEASE_UPDATED
  LEASE_TERMINATED
  PAYMENT_RECORDED
  PAYMENT_UPDATED
  DEPOSIT_CREATED
  DEPOSIT_RETURNED
  NOTIFICATION_SENT
  PROPERTY_CREATED
  PROPERTY_UPDATED
  UNIT_CREATED
  UNIT_UPDATED
  USER_LOGIN
  API_KEY_CREATED
  API_KEY_UPDATED
  API_KEY_DELETED
  MAINTENANCE_REQUEST_CREATED
  MAINTENANCE_REQUEST_UPDATED
  MAINTENANCE_REQUEST_COMPLETED
  DOCUMENT_UPLOADED
  DOCUMENT_DELETED
  OTHER
}

model Activity {
  id String @id @default(cuid())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  type        ActivityType
  description String

  // Related entities
  tenantId String?
  tenant   Tenant? @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)

  leaseId String?
  lease   LeaseAgreement? @relation(fields: [leaseId], references: [id], onDelete: SetNull)

  unitId String?
  unit   Unit? @relation(fields: [unitId], references: [id], onDelete: SetNull)

  maintenanceRequestId String?
  maintenanceRequest   MaintenanceRequest? @relation(fields: [maintenanceRequestId], references: [id], onDelete: SetNull)

  documentId String?
  document   Document? @relation(fields: [documentId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([organizationId])
  @@index([userId])
  @@index([tenantId])
  @@index([leaseId])
  @@index([unitId])
  @@index([maintenanceRequestId])
  @@index([documentId])
  @@index([createdAt])
  @@index([organizationId, type]) // Composite for filtered activity logs
  @@index([organizationId, createdAt]) // Composite for recent activities
}

// ========================================
// SUBSCRIPTION & BILLING
// ========================================

enum SubscriptionTierType {
  FREE
  NORMAL
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  TRIAL
}

enum BillingCycle {
  MONTHLY
  ANNUAL
}

model SubscriptionTier {
  id   String               @id @default(cuid())
  type SubscriptionTierType @unique
  name String

  monthlyPrice Decimal @db.Decimal(10, 2)
  annualPrice  Decimal @db.Decimal(10, 2)

  // Limits
  maxUsers      Int
  maxProperties Int
  maxUnits      Int
  maxTenants    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  features      TierFeature[]
  subscriptions Subscription[]

  @@index([type])
}

model Feature {
  id   String @id @default(cuid())
  code String @unique
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tierFeatures TierFeature[]
}

model TierFeature {
  id        String           @id @default(cuid())
  tierId    String
  tier      SubscriptionTier @relation(fields: [tierId], references: [id], onDelete: Cascade)
  featureId String
  feature   Feature          @relation(fields: [featureId], references: [id], onDelete: Cascade)
  limit     Int?

  @@unique([tierId, featureId])
  @@index([tierId])
  @@index([featureId])
}

model Subscription {
  id             String           @id @default(cuid())
  organizationId String           @unique
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  tierId         String
  tier           SubscriptionTier @relation(fields: [tierId], references: [id])

  status       SubscriptionStatus @default(TRIAL)
  billingCycle BillingCycle       @default(MONTHLY)

  startDate          DateTime
  endDate            DateTime
  trialEndsAt        DateTime?
  cancelledAt        DateTime?
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime

  externalId       String? @unique
  externalResponse Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices Invoice[]

  @@index([organizationId])
  @@index([tierId])
  @@index([status])
}

model Invoice {
  id             String       @id @default(cuid())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  amount           Decimal       @db.Decimal(10, 2)
  status           PaymentStatus @default(PENDING)
  dueDate          DateTime
  paidAt           DateTime?
  externalId       String?       @unique
  externalResponse Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([subscriptionId])
  @@index([status])
  @@index([dueDate])
}

// ========================================
// MAINTENANCE REQUESTS
// ========================================

enum MaintenanceRequestStatus {
  OPEN
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum MaintenanceRequestPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model MaintenanceRequest {
  id String @id @default(cuid())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  unitId String?
  unit   Unit?   @relation(fields: [unitId], references: [id], onDelete: SetNull)

  tenantId String?
  tenant   Tenant? @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  leaseId String?
  lease   LeaseAgreement? @relation(fields: [leaseId], references: [id], onDelete: SetNull)

  title       String
  description String @db.Text

  priority MaintenanceRequestPriority @default(MEDIUM)
  status   MaintenanceRequestStatus   @default(OPEN)

  estimatedCost Decimal? @db.Decimal(12, 2)
  actualCost    Decimal? @db.Decimal(12, 2)

  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities Activity[]

  @@index([organizationId])
  @@index([propertyId])
  @@index([unitId])
  @@index([tenantId])
  @@index([leaseId])
  @@index([status])
  @@index([priority])
  @@index([organizationId, status, createdAt]) // Composite for filtered queries
}

// ========================================
// DOCUMENT MANAGEMENT
// ========================================

model Document {
  id String @id @default(cuid())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Optional FK - attach to any entity
  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  unitId String?
  unit   Unit?   @relation(fields: [unitId], references: [id], onDelete: Cascade)

  tenantId String?
  tenant   Tenant? @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  leaseId String?
  lease   LeaseAgreement? @relation(fields: [leaseId], references: [id], onDelete: Cascade)

  filename   String
  fileType   String
  fileSize   Int
  fileUrl    String
  storageKey String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities Activity[]

  @@index([organizationId])
  @@index([propertyId])
  @@index([unitId])
  @@index([tenantId])
  @@index([leaseId])
  @@index([organizationId, createdAt]) // Composite for recent documents
}
